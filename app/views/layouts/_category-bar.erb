<%= form_with(url: products_path, method: :get, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :category_id, "Category" %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "All Categories" %>
  </div>

<% end %>
